<% if flash.has?(:wrong_user) %>
  <%= flash[:wrong_user] %>
<% end %>
<% if flash.has?(:wrong_user_edit) %>
  <%= flash[:wrong_user_edit] %>
<% end %>

<div class="infopage">
<h1>Welcome, <%= @user.username %>!</h1><br>
<% @comics.each do |comic| %>
<ul>
  <li><a href="/comics/<%= comic.id %>"><strong><label>Publisher: </strong><%= comic.publisher %></label></a></li>
  <li><strong><label>Title: </strong><%= comic.title %></label></li>
  <li><strong><label>Volume: </strong><%= comic.volume %></label></li>
  <li><strong><label>Release Date (Year): </strong><%= comic.year %></label></li>
</ul><br>
<% end %>

<a href="/comics/new"><button class="button">New Entry</button></a>
<a href="/logout"><button class="button">Log Out</button></a>
</div>
