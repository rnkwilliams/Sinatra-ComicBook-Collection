<div class="error">
<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
</div>

<div class="infopage">
<form action="/comics/<%= @comic.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Publisher:</label>
    <input type="text" name="publisher" id="publisher" value="<%= @comic.publisher %>"><br><br>
    <label>Title:</label>
    <input type="text" name="title" id="title" value="<%= @comic.title %>"><br><br>
    <label>Volume:</label>
    <input type="text" name="volume" id="volume" value="<%= @comic.volume %>"><br><br>
    <label>Release Date (Year):</label>
    <input type="text" name="year" id="year" value="<%= @comic.year %>"><br><br>

    <input type="submit" value="Submit" class="button">
</form>
</div>